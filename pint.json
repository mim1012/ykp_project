{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "not_operator_with_successor_space": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "single_quote": true,
        "array_syntax": {
            "syntax": "short"
        }
    },
    "exclude": [
        "vendor",
        "node_modules",
        "bootstrap/cache",
        "storage"
    ]
}