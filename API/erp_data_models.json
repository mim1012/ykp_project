    "aggregation_views": [
      {
        "name": "monthly_activation_summary",
        "description": "월별 개통 현황 집계",
        "base_table": "activations",
        "group_by": [
          "dealer_code",
          "YEAR(activation_date)",
          "MONTH(activation_date)"
        ],
        "aggregates": [
          "COUNT(*) as total_activations",
          "SUM(settlement_amount) as total_settlement",
          "SUM(pre_tax_margin) as total_margin"
        ]
      },
      {
        "name": "monthly_expense_summary",
        "description": "월별 지출 현황 집계",
        "base_table": "daily_expenses",
        "group_by": [
          "dealer_code",
          "YEAR(expense_date)",
          "MONTH(expense_date)"
        ],
        "aggregates": [
          "SUM(amount) as total_daily_expenses",
          "COUNT(*) as expense_count"
        ]
      }
    ]
  },
